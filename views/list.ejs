<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(var i=0; i<newitems.length; i++ ){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" id="" value="<%= newitems[i]._id %>" onchange="this.form.submit()">
                    <p><%= newitems[i].name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <%}%>
        <form class="item" action="/" method="post">
            <input type="text" name="listItem" id="" placeholder="new item" autocomplete="off" autofocus>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>    
        </form>
    </div>
        
</body>

<%- include('footer'); -%>